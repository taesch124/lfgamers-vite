{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
      "@api/*": [ "./src/api/*" ],
      "@atoms/*": [ "./src/atoms/*" ],
      "@assets/*": [ "./src/assets/types/*" ],
      "@components/*": [ "./src/components/*" ],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": [ "./src/pages/*" ],
      "@services/*": [ "./src/services/*" ],
      "@utils/*": [ "./src/utils/*" ],
    },
  },
  "include": [ "src" ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}